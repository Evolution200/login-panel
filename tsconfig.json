{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": true,
        "target": "es5",
        "module": "esnext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": "src",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "lib": ["dom", "esnext"],
        "paths": {
            "Globals/*": ["Globals/*"],
            "Images/*": ["Images/*"],
            "Pages/*": ["Pages/*"],
            "Plugins/*": ["Plugins/*"],
            "Styles/*": ["Styles/*"],
            "Utils/*": ["Utils/*"]
        },
        "jsx": "react-jsx"
    },
    "include": ["src/**/*", "src/declaration.d.ts"]
}
